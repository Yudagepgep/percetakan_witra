<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profil.Data_Profil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:padding="15dp"
            android:background="@drawable/color_form"
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:src="@drawable/user"
                android:id="@+id/edit_photo_profil"
                android:layout_width="wrap_content"
                android:layout_height="150dp"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/edit"
                android:text="Edit Photo"
                android:id="@+id/edit_photo"
                android:drawableLeft="@drawable/edit" />
        </LinearLayout>
        <LinearLayout
            android:paddingLeft="8dp"
            android:paddingRight="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/input_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="6dp"
                app:cardCornerRadius="15dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <EditText
                            android:layout_width="match_parent"
                            android:id="@+id/input_name"
                            android:layout_height="40dp"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/form_profil"
                            android:drawableStart="@drawable/person"
                            android:drawableLeft="@drawable/person"
                            android:drawablePadding="30dp"
                            android:hint=" Nama "
                            android:textColor="@android:color/black"
                            android:textSize="14dp" />


                        <EditText
                            android:layout_width="match_parent"
                            android:id="@+id/input_email"
                            android:layout_height="40dp"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/form_profil"
                            android:drawableStart="@drawable/email"
                            android:drawableLeft="@drawable/person"
                            android:drawablePadding="30dp"
                            android:hint=" Email "
                            android:textColor="@android:color/black"
                            android:textSize="14dp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:id="@+id/input_kode_pos"
                            android:layout_height="40dp"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/form_profil"
                            android:drawableStart="@drawable/kode"
                            android:drawableLeft="@drawable/person"
                            android:drawablePadding="30dp"
                            android:hint=" Kode Pos "
                            android:textColor="@android:color/black"
                            android:textSize="14dp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:id="@+id/input_hp"
                            android:layout_height="40dp"
                            android:inputType="number"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/form_profil"
                            android:drawableStart="@drawable/phone"
                            android:drawableLeft="@drawable/person"
                            android:drawablePadding="30dp"
                            android:hint=" No.Hanphone "
                            android:textColor="@android:color/black"
                            android:textSize="14dp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:id="@+id/input_alamat"
                            android:layout_height="40dp"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/form_profil"
                            android:drawableStart="@drawable/home"
                            android:drawableLeft="@drawable/person"
                            android:drawablePadding="30dp"
                            android:hint=" Alamat "
                            android:textColor="@android:color/black"
                            android:textSize="14dp" />




                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>





        <ProgressBar
            android:layout_marginTop="30dp"
            android:visibility="gone"
            android:id="@+id/loading"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

        </ProgressBar>

        <Button
            android:id="@+id/btn_Edit"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_width="300dp"
            android:textColor="#fff"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:text="Edit Profil"
            android:layout_gravity="center"
            android:background="@drawable/butt_masuk"
            android:layout_height="60dp" />






    </LinearLayout>

</ScrollView>