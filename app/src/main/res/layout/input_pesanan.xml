<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Input.Input_Pesanan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:contentInsetStart="0dp"
            app:contentInsetEnd="0dp"
            android:background="#2e7d32">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/logo_witra"
                        android:id="@+id/circle_imageView"/>



                </LinearLayout>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:text="PESAN CETAK"
                    android:textColor="#000"
                    android:textStyle="bold|normal"
                    android:textSize="24dp" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="40dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:text="Tanggal"
                        android:layout_width="130dp"
                        android:textSize="18dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="#FC0303"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/Layoutinput1"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:textColorHint="#FC0303"
                        android:layout_height="wrap_content">


                        <EditText
                            android:paddingLeft="10dp"
                            android:textColor="#000"
                            android:id="@+id/tgl_pesanan"
                            android:focusable="false"
                            android:layout_width="match_parent"
                            android:background="@drawable/formt"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:hint=""
                            />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:text="Nama Anda"
                        android:textColor="#FC0303"
                        android:textSize="18dp" />


                    <TextView
                        android:id="@+id/nama_user"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="3dp"
                        android:layout_gravity="center"
                        android:background="#90aaff"
                        android:paddingLeft="10dp"
                        android:textColor="#000"
                        android:textColorHint="#000"
                        android:textSize="16dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:text="ID Produk"
                        android:layout_width="130dp"
                        android:textSize="18dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="#FC0303"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"/>

                    <Spinner
                        android:layout_width="match_parent"
                        android:paddingLeft="10dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="#90aaff"
                        android:textColor="#000"
                        android:id="@+id/produk"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:text="Gambar Produk"
                        android:layout_marginTop="6dp"
                        android:layout_width="match_parent"
                        android:textSize="18dp"
                        android:textColor="#FC0303"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:id="@+id/gmbr_produk"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/ambiLgambar"
                        android:text="Ambil Gambar"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="#90aaff"
                        android:textColor="#000"/>




                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:text="Jumlah Pesanan"
                        android:layout_marginTop="6dp"
                        android:layout_width="140dp"
                        android:textSize="18dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="#FC0303"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:text="+"
                        android:layout_marginLeft="5dp"
                        android:onClick="tambah"
                        android:layout_gravity="center"
                        android:layout_marginTop="6dp"
                        android:textStyle="bold"
                        android:background="@drawable/form_unit"
                        android:textAlignment="center"
                        android:id="@+id/decrement"
                        android:textSize="18dp"
                        android:textColor="#000"/>

                    <TextView
                        android:text="00"
                        android:layout_width="40dp"
                        android:background="@drawable/form_unit"
                        android:textSize="18dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:layout_marginTop="6dp"
                        android:id="@+id/unit"
                        android:textColor="#FC0303"
                        android:layout_height="25dp"
                        android:gravity="center_horizontal" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:text="-"
                        android:onClick="kurang"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/form_unit"
                        android:textSize="18dp"
                        android:textAlignment="center"
                        android:id="@+id/increment"
                        android:textColor="#000"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Unit"
                        android:layout_marginTop="6dp"
                        android:paddingLeft="5dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textSize="16dp"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <EditText
                        android:layout_width="match_parent"
                        android:background="@drawable/formt"
                        android:hint="Keterangan"
                        android:id="@+id/ket"
                        android:paddingLeft="5dp"
                        android:layout_height="100dp"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="60dp"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/pesanan_costumer"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="Kirm Pesanan"
                        android:background="#406dff"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/pesanan_keranjang"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="Keranjang"
                        android:background="#f8bb07"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />

                </LinearLayout>

                    <Button
                        android:layout_width="20dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:id="@+id/btn_ket"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/tanya"
                        android:layout_height="20dp"/>

            </LinearLayout>

    </LinearLayout>



</ScrollView>